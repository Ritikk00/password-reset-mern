# Backend Environment Variables (Copy to .env)
# Database
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/databasename?retryWrites=true&w=majority

# JWT
JWT_SECRET=your_super_secret_jwt_key_here_change_this_in_production
JWT_EXPIRE=7d

# Email Configuration (Gmail SMTP)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_gmail@gmail.com
SMTP_PASS=your_app_specific_password_here

# Email sender
EMAIL_FROM=noreply@yourapp.com

# Node Environment
NODE_ENV=production

# Server Port
PORT=5000

# Frontend URL (for email reset links)
FRONTEND_URL=https://your-frontend-domain.com
